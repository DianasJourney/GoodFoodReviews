<div>
    <article>
        <div>
            <h2>{{review.title}}</h2>
            <div>
                Posted by {{review.User.name}} on {{format_date post.createdAt}}
            </div>
        </div>
        <div>
            {{review.body}}
        </div>
    </article>

    {{#if review.Comments}}
    <section>
        <div>
            <h4>Comments</h4>
        </div>

        <div>
            {{#each review.comment}}
            <div>
                <p>
                    {{body}}
                </p>
                <p>
                    &mdash; {{User.name}}, {{format_date createdAt}}
                </p>
            </div>
            {{/each}}
        </div>
    </section>
    {{/if}}

<form id="new-comment-form" class="card">
    <div class="card-header">
        <h3>Add a New Comment</h3>
    </div>

    <div class="card-body">
        <input type="hidden" name="post-id" value="{{post.id}}" />

        <label class="form-label" for="comment-body">Comment</label>

        <textarea name="comment-body" class="form-input"></textarea>

        <button type="submit" class="btn">Submit</button>
    </div>
</form>
</div>

<script src="/js/comment.js"></script>