<body class="signin-bg">
<div class="custom-loginsignupbox" class="two column stackable ui grid">
    <div class="column">
        <div id='custom-border' class="ui segment">
        <h2 id="custom-signuptitle">Welcome to Goodie Foodie's Review ðŸ˜›</h2>
        <h3 id="custom-createtitle">Create an Account</h3>
        <!--input form for users to create info for their account-->
        <form id="signup-form">
            <div>
                <div id='custom-name' for="name-input-signup">Name</div>
                <i class="user icon"></i>
                <input class='custom-nameinput' type="text" id="name-input-signup" placeholder="Enter your name" />
            </div>
            <div>
                <div class='custom-email' for="username-input-signup">Email</div>
                <i class="book icon"></i>
                <input class='custom-inputemail' type="text" id="username-input-signup" placeholder="Enter your email" />
            </div>
            <div>
                <div id='custom-signupinput' for="password-input-signup">Password</div>
                <i class="lock icon"></i>
                <input class="custom-signuppass" type="password" id="password-input-signup" placeholder="Enter your password" />
            </div>
            <!--this will display an error message if the required field is invalid-->
            <div id="error-message2"></div>
            <button class="ui black button" type="submit" id="signup-btn" class="btn">Signup</button>
            <p id="custom-logdescript">Have an account? Login instead.</p>
            <a class="custom-loginbtn" href="/login">Login</a>
        </form>
        </div>
        </div>
    <!--grabs the sign up function-->
    <script src="/js/signup.js"></script>
</body>
       