<div class="homecontainer">
    {{#each reviews as |review|}}
    <div class="homecard">
        <div>
            <img class="review-image" src="{{review.img}}" alt="Review Image">
        </div>
        <div>
            <h2 for="review-title">Review Title:</h2>
            <h1>{{review.title}}</h1>
        </div>
        <div>
            <h2 for="review-description">Review Description:</h2>
            <h1>{{review.description}}</h1>
        </div>
        <a href="/api/review/{{review.id}}">
            <button class="readReview">Read Review</button>
        </a>
    </div>
{{/each}}
</div>